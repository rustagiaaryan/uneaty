{
  "name": "uneaty-backend",
  "version": "1.0.0",
  "description": "Backend for UnEaty food delivery app",
  "main": "src/server.js",
  "scripts": {
    "test": "jest --forceExit --detectOpenHandles",
    "test:unit": "jest tests/unit --forceExit",
    "test:integration": "jest tests/integration --forceExit",
    "dev": "nodemon src/server.js",
    "start": "node src/server.js"
},
  "keywords": [
    "food",
    "delivery",
    "ucla",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.1.0",
    "morgan": "^1.10.0",
    "validator": "^13.9.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.12.2",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageDirectory": "./coverage",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  }
}